<table class="profile" summary="Profile information">
	<tr>
		<td class="main">
		<h1>
		<%= gravatar_for @user %>
		<%= @user.firstname + @user.lastname %>
		</h1>
		</td>
	</tr>
	<tr>	
		<td class="sidebar round">
			<strong>Email: </strong> <%= @user.email %><br />
			<strong>Profile URL: </strong> <%= link_to user_path(@user), @user %><br />
		</td>
	</tr>
</table>

